{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "*"
      ],
      "semanticCommitType": "‚ùì"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "require"
      ],
      "semanticCommitType": "üõ†Ô∏è"
    },
    {
      "matchUpdateTypes": ["major"],
      "semanticCommitType": "‚è´",
      "commitMessagePrefix": "{{semanticCommitType}}({{semanticCommitScope}})!:",
      "commitMessageExtra": "( {{currentVersion}} ‚Üí {{newVersion}} )",
      "commitMessageAction": ""
    },
    {
      "matchUpdateTypes": ["minor"],
      "semanticCommitType": "‚è´",
      "commitMessageExtra": "( {{currentVersion}} ‚Üí {{newVersion}} )",
      "commitMessageAction": ""
    },
    {
      "matchUpdateTypes": ["patch"],
      "semanticCommitType": "‚¨Ü",
      "commitMessageExtra": "( {{currentVersion}} ‚Üí {{newVersion}} )",
      "commitMessageAction": ""
    },
    {
      "matchUpdateTypes": ["digest"],
      "semanticCommitType": "üîÑ",
      "commitMessageExtra": "( {{currentDigestShort}} ‚Üí {{newDigestShort}} )",
      "commitMessageAction": ""
    },
    {
      "matchUpdateTypes": ["pin", "pinDigest"],
      "semanticCommitType": "üìå",
      "commitMessageAction": ""
    },
    {
      "matchDatasources": ["docker"],
      "semanticCommitScope": "cont",
      "commitMessageTopic": "image {{depName}}"
    },
    {
      "matchManagers": ["github-actions"],
      "semanticCommitScope": "ci"
    },
    {
      "addLabels": ["renovate/dash"],
      "matchDatasources": ["custom.grafana-dashboards"],
      "matchUpdateTypes": ["major"],
      "semanticCommitType": "üîÑ",
      "semanticCommitScope": "dash",
      "commitMessageTopic": "dashboard {{depName}}",
      "commitMessageExtra": "( {{currentVersion}} ‚Üí {{newVersion}} )"
    },
    {
      "matchDatasources": ["helm"],
      "semanticCommitScope": "helm",
      "commitMessageTopic": "chart {{depName}}"
    },
    {
      "matchDatasources": ["pip_requirements", "pypi"],
      "semanticCommitScope": "pip"
    },
    {
      "matchDatasources": ["docker"],
      "addLabels": ["renovate/container"]
    },
    {
      "matchDatasources": ["helm"],
      "addLabels": ["renovate/helm"]
    },
    {
      "matchDatasources": ["github-releases", "github-tags"],
      "addLabels": ["renovate/gh-r"]
    },
    {
      "matchManagers": ["mise"],
      "semanticCommitScope": "mise",
      "commitMessageTopic": "mise {{depName}}",
      "commitMessageExtra": "( {{currentVersion}} ‚Üí {{newVersion}} )",
      "addLabels": ["renovate/mise"]
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["renovate/ci"]
    },
    {
      "matchDatasources": ["pypi"],
      "addLabels": ["renovate/pip"]
    },
    {
      matchDatasources: ["custom.grafana-dashboards"],
      addLabels: ["renovate/dash"]
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["type/major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "labels": ["type/minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["type/patch"]
    },
    {
      "matchUpdateTypes": ["digest"],
      "labels": ["type/digest"]
    }
  ]
}